{
  "compileOnSave": true,
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./lib",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "outDir": "lib",
    "baseUrl": "."
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./spec/**/*", "./node_modules/**/*"]
}
